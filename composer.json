{
    "version": "0.1.0",
    "name": "takeshiyu/linker",
    "description": "A Composer plugin for linking local packages during development, similar to `npm link`.",
    "type": "composer-plugin",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TakeshiYu\\Linker\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Takeshi Yu",
            "email": "hey@takeshiyu.me"
        }
    ],
    "require": {
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "laravel/pint": "^1.21"
    },
    "extra": {
        "class": "TakeshiYu\\Linker\\LinkerPlugin"
    },
    "prefer-stable": true,
    "scripts": {
        "lint": "pint"
    }
}